@model TarefaModel
@{
    ViewData["Title"] = "Editando Tarefas";
}


<div  class="text-center">
    
    <h1 class="display-4">Editando Tarefas</h1>
    
</div>

<form asp-controller="Tarefa" asp-action="Alterar" method="post">

  <input type="hidden" asp-for="Id"/>
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="NomeTarefa" class="form-control"  placeholder="Digite o nome da tarefa">
  </div>
    <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="DescricaoTarefa" class="form-control"  placeholder="Digite email da tarefa">
  </div>
  <div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="text" asp-for="Tefefone" class="form-control"  placeholder="Digite o telefone da tarefa">
  </div>    
    <br>
  <button type="submit"  class="btn btn-warning btn-block" >Alterar</button>
  <a class="btn btn-secondary " asp-controller="Tarefa" asp-action="Index" role="button" >Voltar</a>
</form>
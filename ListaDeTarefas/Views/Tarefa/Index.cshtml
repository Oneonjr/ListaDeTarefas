@model List<TarefaModel>
@{
    ViewData["Title"] = "Listagem de Tarefas";
}



<br>

<div  class="text-center">
    
    <h1 class="display-4">Listagem de Tarefas</h1>
    <br>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-primary" role="button" asp-controller="Tarefa" asp-action="Criar">Adicionar Tarefas</a>
    </div>
    <br>

    <table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Nome da Tarefa</th>
        <th scope="col">Descrição da Tarefa</th>
        <th scope="col">Telefone</th>
        <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (TarefaModel tarefa in Model)
            {
                <tr>
                <th scope="row">@tarefa.Id</th>
                <td>@tarefa.NomeTarefa</td>
                <td>@tarefa.DescricaoTarefa</td>
                <td>@tarefa.Tefefone</td>
                <td>
                    <div class="btn-group" role="group">       
                        <a role="button" class="btn btn-outline-warning" asp-route-id="@tarefa.Id" asp-controller="Tarefa" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-outline-danger" asp-route-id="@tarefa.Id" asp-controller="Tarefa" asp-action="Apagarconfirmacao">Apagar</a>
                    </div>
                </td>
                </tr>
            }
        }
    </tbody>
    </table>
</div>


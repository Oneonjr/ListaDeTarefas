@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o Usuario";
}

<div class="text-center">
    <h3 style="color: red;">Realmente deseja Apagar o Usuario (@Model.Nome) ?</h3>


<br>
<a class="btn btn-secondary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">confirmar exclusão</a>

</div>